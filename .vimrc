colorscheme torte
colors torte
set ignorecase
set noincsearch
set hlsearch
set expandtab
set softtabstop=2
set shiftwidth=2
set tabstop=8
set ai
set backspace=indent,eol,start
set ruler               " show the cursor position all the time
set showcmd             " display incomplete commands
let g:load_doxygen_syntax=1
let g:openssl_backup = 1
